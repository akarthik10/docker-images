{
  "extends": [
    "config:base"
  ],
  
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    // Allowed packages to be automerged
    {
      "matchPackageNames": ["n8nio/n8n", "yfinance"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
